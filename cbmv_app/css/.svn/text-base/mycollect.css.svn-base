a {
	text-decoration: none;
	color: white;
}

.bg {
	background-color: #E51C23;
}

.tx {
	width: 100%;
	display: flex;
	justify-content: space-between;
}

.nav {
	height: 45px;
	color: black;
}

.titou {
	font-size: 18px;
	line-height: 45px;
	color: white;
}

.back {
	top: 6px;
}


/*========头部导航样式end==========*/

.table tr {
	height: 80px;
}
.tImg{
	width: 70px;
	height: 70px;
}
.table tr td:first-child img {
	width: 70px;
	height: 70px;
}

.jianjie {
	margin-left: -15px;
	height: 70px;
	width: 230px;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.jianjie span:nth-child(1) {
	height: 25px;
	width: 250px;
	overflow: hidden;
	text-overflow: ellipsis;
}

.jianjie span:nth-child(2) {
	height: 52px;
	width: 250px;
	color: #ccc;
	word-wrap: break-word;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}

.check{
	height: 100%;
	line-height: 70px;
}
